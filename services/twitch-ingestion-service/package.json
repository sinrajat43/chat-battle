{
  "name": "twitch-ingestion-service",
  "version": "1.0.0",
  "description": "Service that connects to Twitch IRC and publishes messages to Kafka",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "generate-token": "node scripts/generate-token.js",
    "auth": "ts-node src/auth/TwitchAuth.ts"
  },
  "keywords": [
    "twitch",
    "kafka",
    "irc",
    "chat"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@tmi.js/chat": "^0.2.0",
    "axios": "^1.7.2",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "kafkajs": "^2.2.4",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
