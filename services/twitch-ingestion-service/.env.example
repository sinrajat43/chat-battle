# Twitch Configuration
TWITCH_CHANNEL=channelname
TWITCH_USERNAME=your_bot_username

# Twitch OAuth Token (Optional - if not provided, will use automatic token refresh)
# Leave empty to use automatic token refresh via TWITCH_CLIENT_ID and TWITCH_CLIENT_SECRET
TWITCH_OAUTH_TOKEN=oauth:your_token_here

# Twitch OAuth (Required for automatic token refresh)
TWITCH_CLIENT_ID=your_client_id_here
TWITCH_CLIENT_SECRET=your_client_secret_here
TWITCH_REDIRECT_URI=http://localhost:3000/auth/callback
TWITCH_SCOPES=chat:read
TWITCH_AUTH_PORT=3000

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_CHAT_MESSAGES=twitch-chat-messages
KAFKA_CLIENT_ID=twitch-ingestion-service

# Logging
LOG_LEVEL=info

# Node Environment
NODE_ENV=development
